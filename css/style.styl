backgroundColor = #000
goldColor = #87754f
selectionColor = red
fittyPer = 50%
translateFitty = translate(-50%, 0%)
transform(n)
  -webkit-transform n
  -moz-transform n
  -o-transform n
  transform n

html
body 
	background-color backgroundColor


.logo
	width 600px
	height 67px
	text-align center
	position fixed
	top 20px
	left fittyPer
	transform translateFitty
	z-index 999
	img
		width 100%

